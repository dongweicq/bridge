<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".MainActivity">

        <!-- 标题区域 -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bridge"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/subtitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OpenClaw 微信自动化桥接"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"/>

        <!-- 状态区域 -->
        <TextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:fontFamily="monospace"
            android:background="#F5F5F5"
            android:padding="12dp"
            android:layout_marginTop="12dp"/>

        <!-- 服务按钮 -->
        <Button
            android:id="@+id/accessibilityBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="启用无障碍服务"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/testPingBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试 HTTP 服务"
            android:backgroundTint="#4CAF50"
            android:layout_marginTop="4dp"/>

        <Button
            android:id="@+id/toolManagerBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="工具管理"
            android:backgroundTint="#9C27B0"
            android:layout_marginTop="4dp"/>

        <!-- 分隔线 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <!-- 坐标配置标题 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="坐标配置（首次使用请逐个获取）"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#333333"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击「获取」按钮，在蒙层上点击目标位置"
            android:textSize="11sp"
            android:textColor="#999999"
            android:layout_marginTop="2dp"/>

        <!-- 步骤1：搜索按钮 -->
        <LinearLayout
            android:id="@+id/step1Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F9F9F9"
            android:padding="8dp"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="步骤1: 搜索按钮"
                android:textSize="13sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信首页右上角放大镜"
                android:textSize="11sp"
                android:textColor="#666666"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X:"/>

                <EditText
                    android:id="@+id/step1X"
                    android:layout_width="60dp"
                    android:layout_height="36dp"
                    android:inputType="numberDecimal"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_marginStart="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Y:"
                    android:layout_marginStart="8dp"/>

                <EditText
                    android:id="@+id/step1Y"
                    android:layout_width="60dp"
                    android:layout_height="36dp"
                    android:inputType="numberDecimal"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_marginStart="4dp"/>

                <Button
                    android:id="@+id/step1PickBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="获取"
                    android:textSize="12sp"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="#2196F3"/>

                <Button
                    android:id="@+id/step1TestBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="测试"
                    android:textSize="12sp"
                    android:layout_marginStart="4dp"
                    android:backgroundTint="#FF9800"/>
            </LinearLayout>
        </LinearLayout>

        <!-- 步骤2：输入法剪贴板 -->
        <LinearLayout
            android:id="@+id/step2Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F9F9F9"
            android:padding="8dp"
            android:layout_marginTop="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="步骤2: 输入法剪贴板"
                android:textSize="13sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="键盘上的剪贴板内容位置"
                android:textSize="11sp"
                android:textColor="#666666"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X:"/>

                <EditText
                    android:id="@+id/step2X"
                    android:layout_width="60dp"
                    android:layout_height="36dp"
                    android:inputType="numberDecimal"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_marginStart="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Y:"
                    android:layout_marginStart="8dp"/>

                <EditText
                    android:id="@+id/step2Y"
                    android:layout_width="60dp"
                    android:layout_height="36dp"
                    android:inputType="numberDecimal"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_marginStart="4dp"/>

                <Button
                    android:id="@+id/step2PickBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="获取"
                    android:textSize="12sp"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="#2196F3"/>

                <Button
                    android:id="@+id/step2TestBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="测试"
                    android:textSize="12sp"
                    android:layout_marginStart="4dp"
                    android:backgroundTint="#FF9800"/>
            </LinearLayout>
        </LinearLayout>

        <!-- 步骤3：联系人 -->
        <LinearLayout
            android:id="@+id/step3Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F9F9F9"
            android:padding="8dp"
            android:layout_marginTop="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="步骤3: 联系人"
                android:textSize="13sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="搜索结果中的联系人"
                android:textSize="11sp"
                android:textColor="#666666"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X:"/>

                <EditText
                    android:id="@+id/step3X"
                    android:layout_width="60dp"
                    android:layout_height="36dp"
                    android:inputType="numberDecimal"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_marginStart="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Y:"
                    android:layout_marginStart="8dp"/>

                <EditText
                    android:id="@+id/step3Y"
                    android:layout_width="60dp"
                    android:layout_height="36dp"
                    android:inputType="numberDecimal"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_marginStart="4dp"/>

                <Button
                    android:id="@+id/step3PickBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="获取"
                    android:textSize="12sp"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="#2196F3"/>

                <Button
                    android:id="@+id/step3TestBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="测试"
                    android:textSize="12sp"
                    android:layout_marginStart="4dp"
                    android:backgroundTint="#FF9800"/>
            </LinearLayout>
        </LinearLayout>

        <!-- 步骤4：消息输入框 -->
        <LinearLayout
            android:id="@+id/step4Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F9F9F9"
            android:padding="8dp"
            android:layout_marginTop="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="步骤4: 消息输入框"
                android:textSize="13sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="聊天界面底部输入框"
                android:textSize="11sp"
                android:textColor="#666666"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X:"/>

                <EditText
                    android:id="@+id/step4X"
                    android:layout_width="60dp"
                    android:layout_height="36dp"
                    android:inputType="numberDecimal"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_marginStart="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Y:"
                    android:layout_marginStart="8dp"/>

                <EditText
                    android:id="@+id/step4Y"
                    android:layout_width="60dp"
                    android:layout_height="36dp"
                    android:inputType="numberDecimal"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_marginStart="4dp"/>

                <Button
                    android:id="@+id/step4PickBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="获取"
                    android:textSize="12sp"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="#2196F3"/>

                <Button
                    android:id="@+id/step4TestBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="测试"
                    android:textSize="12sp"
                    android:layout_marginStart="4dp"
                    android:backgroundTint="#FF9800"/>
            </LinearLayout>
        </LinearLayout>

        <!-- 步骤5：发送按钮 -->
        <LinearLayout
            android:id="@+id/step5Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F9F9F9"
            android:padding="8dp"
            android:layout_marginTop="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="步骤5: 发送按钮"
                android:textSize="13sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="聊天界面发送按钮（点击前会隐藏键盘）"
                android:textSize="11sp"
                android:textColor="#666666"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X:"/>

                <EditText
                    android:id="@+id/step5X"
                    android:layout_width="60dp"
                    android:layout_height="36dp"
                    android:inputType="numberDecimal"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_marginStart="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Y:"
                    android:layout_marginStart="8dp"/>

                <EditText
                    android:id="@+id/step5Y"
                    android:layout_width="60dp"
                    android:layout_height="36dp"
                    android:inputType="numberDecimal"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_marginStart="4dp"/>

                <Button
                    android:id="@+id/step5PickBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="获取"
                    android:textSize="12sp"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="#2196F3"/>

                <Button
                    android:id="@+id/step5TestBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="测试"
                    android:textSize="12sp"
                    android:layout_marginStart="4dp"
                    android:backgroundTint="#FF9800"/>
            </LinearLayout>
        </LinearLayout>

        <!-- 底部按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <Button
                android:id="@+id/saveConfigBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="保存配置"
                android:backgroundTint="#2196F3"
                android:layout_marginEnd="4dp"/>

            <Button
                android:id="@+id/resetConfigBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="重置默认"
                android:backgroundTint="#9E9E9E"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/testSendBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试发送消息"
            android:backgroundTint="#FF9800"
            android:layout_marginTop="4dp"/>

        <!-- 使用说明 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="使用说明:\n1. 启用无障碍服务\n2. 逐个点击「获取」按钮标定坐标\n3. 获取坐标时会自动执行前置步骤\n4. 在蒙层上点击目标位置\n5. 点击「确定」保存坐标\n6. 配置完成后可测试发送"
            android:textSize="11sp"
            android:textColor="#999999"
            android:lineSpacingExtra="2dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

    </LinearLayout>
</ScrollView>

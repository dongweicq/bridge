<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".MainActivity">

        <!-- 标题区域 -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bridge"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/subtitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OpenClaw 微信自动化桥接"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"/>

        <!-- 状态区域 -->
        <TextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:fontFamily="monospace"
            android:background="#F5F5F5"
            android:padding="12dp"
            android:layout_marginTop="12dp"/>

        <!-- 服务按钮 -->
        <Button
            android:id="@+id/accessibilityBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="启用无障碍服务"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/testPingBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试 HTTP 服务"
            android:backgroundTint="#4CAF50"
            android:layout_marginTop="4dp"/>

        <Button
            android:id="@+id/toolManagerBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="工具管理"
            android:backgroundTint="#9C27B0"
            android:layout_marginTop="4dp"/>

        <!-- 分隔线 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <!-- 测试区域 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试功能"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#333333"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用工具链测试（需先在工具管理中配置坐标）"
            android:textSize="11sp"
            android:textColor="#999999"
            android:layout_marginTop="2dp"/>

        <!-- 联系人输入 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系人:"/>

            <EditText
                android:id="@+id/contactInput"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:inputType="text"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:layout_marginStart="4dp"
                android:text="1810835"/>

            <Button
                android:id="@+id/testSearchBtn"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="测试搜索"
                android:textSize="12sp"
                android:layout_marginStart="4dp"
                android:backgroundTint="#2196F3"/>
        </LinearLayout>

        <!-- 消息输入 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消息内容:"/>

            <EditText
                android:id="@+id/messageInput"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:inputType="text"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:layout_marginStart="4dp"
                android:text="test"/>

            <Button
                android:id="@+id/testSendBtn"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="测试发送"
                android:textSize="12sp"
                android:layout_marginStart="4dp"
                android:backgroundTint="#FF9800"/>
        </LinearLayout>

        <!-- 使用说明 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="使用说明:\n1. 启用无障碍服务\n2. 点击「工具管理」配置工具坐标\n3. 每个工具可设置前置工具链\n4. 使用测试按钮验证配置\n5. 完成后可通过 HTTP API 调用"
            android:textSize="11sp"
            android:textColor="#999999"
            android:lineSpacingExtra="2dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

    </LinearLayout>
</ScrollView>
